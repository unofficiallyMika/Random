/**
 * @name light-midnight
 * @description A light, rounded discord theme based on Midnight.
 * @author refact0r (adapted by ChatGPT)
 * @version 1.0
 */

/* import the original CSS and override with light mode adjustments */
@import url('https://refact0r.github.io/midnight-discord/midnight.css');

:root {
	/* font, change to 'gg sans' for default discord font */
	--font: 'figtree';

	/* top left corner text */
	--corner-text: 'Light Midnight';

	/* color of status indicators and window controls */
	--online-indicator: #23a55a;
	--dnd-indicator: #f13f43;
	--idle-indicator: #f0b232;
	--streaming-indicator: #593695;

	/* accent colors */
	--accent-1: hsl(190, 70%, 40%);
	--accent-2: hsl(190, 70%, 50%);
	--accent-3: hsl(190, 70%, 60%);
	--accent-4: hsl(190, 70%, 70%);
	--accent-5: hsl(190, 70%, 80%);
	--mention: hsla(190, 80%, 80%, 0.1);
	--mention-hover: hsla(190, 80%, 80%, 0.05);

	/* text colors */
	--text-0: black; /* text on colored elements */
	--text-1: hsl(220, 15%, 20%);
	--text-2: hsl(220, 25%, 30%);
	--text-3: hsl(220, 25%, 40%);
	--text-4: hsl(220, 25%, 50%);
	--text-5: hsl(220, 25%, 70%);

	/* background and light colors */
	--bg-1: hsl(0, 0%, 100%); /* light background */
	--bg-2: hsl(0, 0%, 96%); /* light buttons */
	--bg-3: hsl(0, 0%, 92%); /* light panels */
	--bg-4: hsl(0, 0%, 88%); /* main background color */
	--hover: hsla(230, 20%, 40%, 0.1); /* channels and buttons when hovered */
	--active: hsla(220, 20%, 40%, 0.2); /* channels and buttons when clicked or selected */
	--message-hover: hsla(220, 0%, 0%, 0.05); /* messages when hovered */

	/* amount of spacing and padding */
	--spacing: 12px;

	/* animations */
	--list-item-transition: 0.2s ease;
	--unread-bar-transition: 0.2s ease;
	--moon-spin-transition: 0.4s ease;
	--icon-spin-transition: 1s ease;

	/* corner roundness (border-radius) */
	--roundness-xl: 22px;
	--roundness-l: 20px;
	--roundness-m: 16px;
	--roundness-s: 12px;
	--roundness-xs: 10px;
	--roundness-xxs: 8px;

	/* direct messages moon icon */
	--discord-icon: none;
	--moon-icon: block;
	--moon-icon-url: url('https://upload.wikimedia.org/wikipedia/commons/c/c4/Font_Awesome_5_solid_moon.svg');
	--moon-icon-size: auto;

	/* filter adjustments */
	--login-bg-filter: saturate(1) brightness(1);
}

