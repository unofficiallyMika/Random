    background: var(--bg-4);
}
.selected_fd6364 .header_fd6364, /* server name hover */
.wrapper_f90abb:hover .childWrapper_f90abb, /* server icon hover */
.wrapper_f90abb.selected_ae80f7 .childWrapper_f90abb { /* selected server icon */
    background: var(--message-hover);
}

/* more rounded corners */
.container_ee69e0, .panels_a4d4d9, .privateChannels_f0963d, /* channel and dms list */
.container_a6d69a, /* forums */
.notice_be03aa, /* banner notice */
.wrapper_d880dc.minimum_d880dc, /* private call */
.main_d8215a, /* server onboarding */
.shop_e77fa3, /* discord shop */
